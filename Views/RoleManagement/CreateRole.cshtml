@model CreateRoleViewModel

<br>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Create Role</h3>
                <br>
                <form class="form-horizontal" asp-controller="RoleManagement" asp-action="CreateRolePostView" method="Post">
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="RoleName"></label>
                            <div class="col-md-3">
                                <input asp-for="RoleName" class="form-control" />
                            </div>
                            <div class="col-md-6">
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3"></div>
                            @foreach (var item in Model.ModuleList)
                            {
                                <label class="col-md-2 control-label">@item.Value</label>
                                <div class="col-md-1 checkbox checkbox-switchery switchery-sm checkbox-right">
                                <label>
                                    <input class="switchery" type="checkbox" name="selectedModules" value="@item.Value"/>
                                </label>
                                </div>
                            }
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-5 col-md-4">
                                <a asp-controller="RoleManagement" asp-action="ListRoles" class="btn btn-default">Cancel</a>
                                 <button type="submit" class="btn btn-default">Save</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
  <script>
    if (Array.prototype.forEach) {
      var elems = Array.prototype.slice.call(document.querySelectorAll('.switchery'));
      elems.forEach(function(html) {
      var switchery = new Switchery(html);
      });
    }
    else {
      var elems = document.querySelectorAll('.switchery');
      for (var i = 0; i < elems.length; i++) {
        var switchery = new Switchery(elems[i]);
      }
    }
  </script>
}