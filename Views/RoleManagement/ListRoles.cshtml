<div class="container-fluid">
    <div class="col-xs-12">
        <br />
        <div class="card card-outline-info">
            <div class="card-header ">
                <h2 class="m-b-0 text-themecolor">All active roles</h2>
            </div>
            <div class="card-body">
                <div id='events'></div>
                <table id="roles" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>RoleName</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="https://cdn.datatables.net/select/1.2.2/js/dataTables.select.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.3.1/js/dataTables.buttons.min.js"></script>
    <script>
        $(document).ready(function() {
                var table =$('#roles').DataTable({
                    dom: 'Bfrtip',
                    ajax: {
                        url: '/get/all/active/roles/json/',
                        dataSrc: ''
                    },
                    "columns": [
                        { "data": "id" },
                        { "data": "roleName" },
                    ],
                    paging: true,
                    lengthChange: false,
                    searching: false,
                    ordering: true,
                    info: true,
                    autoWidth: false,
                    columnDefs: [
                    {
                        targets: [ 0 ],
                        visible: false,
                        searchable: false
                    }
                    ],
                    select: {
                            style: 'single'
                        },
                    buttons: [
                            {
                                text: 'Delete',
                                action: function (e, dt, node, config) {
                                    var rowData= dt.row( { selected: true } ).data()

                                    if(rowData == null)
                                    {
                                            $.alert({
                                                title: 'No role selected!',
                                                content: 'No role has been selected, to continue please select a role.',
                                            });
                                    }
                                    else
                                    {
                                        $.confirm({
                                            title: 'Delete role',
                                            content: 'Are you sure do you want to delete: ' + rowData.roleName+'?',
                                            buttons: {
                                                        confirm: function () {
                                                            $.ajax({
                                                                url: '/RoleManagement/DeleteRoleView/'+rowData.id,
                                                                type: 'DELETE',
                                                                success: function (obj) {
                                                                    toastr.success('', 'Role: ' + rowData.roleName + ' deleted succesfully', { positionClass: 'toast-top-center' });
                                                                    table.ajax.reload();
                                                                },
                                                                error: function (obj) {
                                                                    toastr.error('', 'Role: ' + rowData.roleName + ' could not be deleted', { positionClass: 'toast-top-center' });
                                                                    table.ajax.reload();
                                                                }
                                                            });
                                                        },
                                                        cancel: function () {
                                                            table.ajax.reload();
                                                        }
                                        }
                                        });
                                    }
                                },
                                enabled: false
                            },
                            {
                                text: 'Edit',
                                action: function (e, dt, node, config) {
                                    var rowData= dt.row( { selected: true } ).data()
                                    if(rowData == null)
                                    {
                                        $.alert({
                                            title: 'No user selected!',
                                            content: 'No user has been selected, to continue please select a role.',
                                        });
                                    }
                                    else
                                    {
                                    window.location.href = '/get/role/'+rowData.id
                                    }
                                },
                                enabled: false
                            }
                        ]
                    });
                    table.on( 'select', function () {
                        var selectedRows = table.rows( { selected: true } ).count();
                        table.button( 0 ).enable( selectedRows == 1 );
                        table.button( 1 ).enable( selectedRows == 1 );
                    } );
                    table.on( 'deselect',function() {
                        //var unselectedRows = table.rows( {selected: false} ).count();
                        table.button( 0 ).disable();
                        table.button( 1 ).disable();
                    });
        });
    </script>
}