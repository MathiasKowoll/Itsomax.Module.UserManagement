@model CreateUserViewModel


<div class="container-fluid">
    <br />
  <div class="row">
      <div class="col-lg-12">
          <div class="card card-outline-info">
              <div class="card-header bg-theme">
                  <h2 class="m-b-0 text-white">Create User</h2>
              </div>
              <div class="card-body">
                  <form autocomplete="off" class="form-horizontal p-t-20" asp-controller="UserManagement" asp-action="CreateUserPostView" method="Post">
                      <h3 class="box-title">User Details</h3>
                      <hr class="m-t-0 m-b-40">
                      <div class="form-group row">
                          <label for="username2" class="col-sm-2 text-right control-label" asp-for="UserName"></label>
                          <div class="col-sm-4">
                              <div class="input-group">
                                  <div class="input-group">
                                      <div class="input-group-prepend">
                                          <span class="input-group-text" id="basic-addon1">
                                              <i class="ti-user"></i>
                                          </span>
                                      </div>
                                      <input asp-for="UserName" class="form-control" id="username2" placeholder="Username" />
                                  </div>
                              </div>
                          </div>
                          <div class="col-sm-6">
                              <span asp-validation-for="UserName" class="text-danger"></span>
                          </div>
                      </div>
                      <div class="form-group row">
                          <label for="email" class="col-sm-2 text-right control-label " asp-for="Email"></label>
                          <div class="col-sm-4">
                              <div class="input-group">
                                  <div class="input-group-prepend">
                                      <span class="input-group-text" id="basic-addon2">
                                          <i class="ti-email"></i>
                                      </span>
                                  </div>
                                  <input asp-for="Email" class="form-control" id="email" placeholder="Email" />
                              </div>
                          </div>
                          <div class="col-sm-6">
                              <span asp-validation-for="Email" class="text-danger"></span>
                          </div>
                      </div>
                      <div class="form-group row">
                          <label for="password" class="col-sm-2 text-right control-label " asp-for="Password"></label>
                          <div class="col-sm-4">
                              <div class="input-group">
                                  <div class="input-group-prepend">
                                      <span class="input-group-text" id="basic-addon3">
                                          <i class="ti-lock"></i>
                                      </span>
                                  </div>
                                  <input asp-for="Password" class="form-control" id="password" placeholder="Password" />
                              </div>
                          </div>
                          <div class="col-sm-6">
                              <span asp-validation-for="Password" class="text-danger"></span>
                          </div>
                      </div>
                      <div class="form-group row align-items-center">
                          <label for="password2" class="col-sm-2 text-right control-label " asp-for="ConfirmPassword"></label>
                          <div class="col-sm-4">
                              <div class="input-group">
                                  <div class="input-group-prepend">
                                      <span class="input-group-text" id="basic-addon4">
                                          <i class="ti-lock"></i>
                                      </span>
                                  </div>
                                  <input asp-for="ConfirmPassword" class="form-control" id="password2" placeholder="Password" />
                              </div>
                          </div>
                          <div class="col-sm-6">
                              <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                          </div>
                      </div>
                      <h3 class="box-title">Assign Roles</h3>
                      <hr class="m-t-0 m-b-40">
                      <div class="form-group row align-items-center">
                          <div class="col-md-10 ml-md-auto">
                              @foreach (var item in Model.RolesList)
                                {
                                      <div class="checkbox checkbox-info">
                                          <input id="@item.Value" type="checkbox" name="SelectedRoles" value="@item.Value">
                                          <label for="@item.Value">@item.Value</label>
                                      </div>
                               }
                          </div>
                      </div>
                      <h3 class="box-title">Save new user</h3>
                      <hr class="m-t-0 m-b-40">
                      <div class="form-group row">
                          <div class="col-md-10 ml-md-auto">
                              <button type="submit" class="btn btn-info waves-effect waves-light"><i class="fa fa-check"></i> Save</button>
                              <a asp-controller="UserManagement" asp-action="ListActiveUsers" class="btn btn-info waves-effect waves-light">Cancel</a>
                          </div>
                      </div>
                  </form>
              </div>
          </div>
      </div>
  </div>
</div>


@section scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}